{
    "name": "haridarshan/opensearch-adapter",
    "description": "Adapter for official PHP OpenSearch client",
    "keywords": [
        "opensearch",
        "adapter",
        "client",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Babenko",
            "email": "babenko.i.a@gmail.com"
        },
        {
            "name": "Hari Darshan Gorana",
            "email": "er.haridarshan@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OpenSearch\\Adapter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSearch\\Adapter\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "haridarshan/opensearch-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^7.5",
        "dg/bypass-finals": "^1.3"
    },
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
